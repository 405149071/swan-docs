<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" href="https://www.baidu.com/favicon.ico" type="image/x-icon">
    <title>
        手百小游戏文档<%= (' - ' + (page.title || config.title)) || '' %>
    </title>
    <%- css('css/game/main.css') %>
    <%- css('css/tooltipster.bundle') %>
</head>
<body>
    <header class="p-navbar">
        <div class="p-navbar-logo">
            <%- image_tag('img/logo.png') %>

        </div>
        <div class="p-navbar-header">
        </div>
        <nav class="p-navbar-menu">
                <div class="mobile-navbar-selected">
                    <span>
                    <% switch(page.categoryName) {
                        case 'introduction': %>
                            介绍
                            <% break; %>
                        <% case 'design': %>
                            设计
                            <% break; %>
                        <% case 'api': %>
                            开发
                            <% break; %>
                        <% case 'data': %>
                            数据
                            <% break; %>
                        <% case 'operations': %>
                            运营
                            <% break; %>
                    <% } %>
                    </span>
                    <%- image_tag('img/arrow-open.png') %>
                </div>

            <ul>
                <li class="introduction <% if (page.categoryName === 'introduction') { %>is-active<% } %>">
                    <%- link_to('game/introduction/prerare/enter_application/', page.categoryName === 'introduction' ? '小游戏介绍' : '介绍') %>
                </li>
                <li class="design <% if (page.categoryName === 'design') { %>is-active<% } %>">
                    <%- link_to('game/design/overview/introduction/', '设计') %>
                </li>
                <li class="develop <% if (page.categoryName === 'api') { %>is-active<% } %>">
                    <%- link_to('game/api/openApi/authorize/',  page.categoryName === 'api' ? '小游戏开发' : '开发') %>
                </li>
                <li class="data <% if (page.categoryName === 'data') { %>is-active<% } %>">
                    <%- link_to('game/data/feature/concept/', page.categoryName === 'data' ? '小游戏数据' : '数据') %>
                </li>
                <li class="operations <% if (page.categoryName === 'operations') { %>is-active<% } %>">
                    <%- link_to('game/operations/service/specification/', '运营') %>
                </li>
            </ul>
        </nav>

        <%- partial('./game-search') -%>
        <%- js('js/jquery.min') %>
        <%- js('js/tooltipster.bundle.min')%>
        <%- js('js/game/search.raw') %>
        <%- js('js/game/marked.min')%>
        <%- js('js/game/mobileAdapter')%>
        <%- js('js/game/doc.raw')%>
        <%- js('js/headerinit')%>
        <% if (config.search) { %>
            <script>
            var search_path = "<%= config.search.path %>";
            if (search_path.length == 0) {
                search_path = "search.json";
            }
            var path = "<%= config.root %>" + search_path;
            searchFunc(path, 'local-search-input', 'article-search-result', marked);
            </script>
        <% } %>
    </header>

    <% if (locals.sidebar) { %>
    <%- partial('./game-sidebar', {categoryName: locals.categoryName}) %>
    <% } %>

    <div class="p-content <%= locals.categoryName %>">
        <div class="p-content-wrap">
            <article id="article-search-result" class="article-search-result"></article>
            <article id="article-main-content" class="p-content-wrap-article">
                <h1><%- page.title %></h1>
